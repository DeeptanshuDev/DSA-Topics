#include<iostream>
#include<string>
using namespace std;

class Stack{
	private :
		int top;
		int arr[5];
	public :
		Stack()
		{
			top = -1;
			for(int i=0;i<5;i++)
			{
				
				arr[i]=0;
				cout<<"the value at "<<i<<" is : "<<arr[i]<<endl;
			}
		}
		
		bool isEmpty()
		{
			if(top == -1)
			return true;
			else
			return false;
		}
		bool isFull()
		{
			if(top == 4)
			{
				return true;
			}
			else
			return false;
		}
		void push(int val)
		{
			if(isFull())
			{
				cout<<"the stack is overflow"<<endl;
			}
			else
			{
				
				top++;
				arr[top] = val;
				cout<<"the val is: "<<val<<" and the top value is "<<top <<" and the value on array is "<<arr[top]<<endl;
			}
			
		}
		
		int pop()
		{
			if(isEmpty())
			{
				cout<<"Stack is wmpty"<<endl;
				return 0;
			}
			else
			{
				int val = arr[top];
				cout<<"yoiu are in pop operation and the value at top is "<<val<<endl;
				arr[top] = 0;
				top--;
				return val;
			}
			
		}
		
		void peek(int pos)
		{
			if(isEmpty())
			{
				cout<<"the stack is empty"<<endl;
			}
			else
			{
				cout<<"the value at "<<pos<<" is : "<<arr[pos-1]<<endl;
			}
		}
		
		void count()		
		{
			if(isEmpty())
			{
				cout<<"the stack is empty"<<endl;
			}
			else
			{
				cout<<"total no. of value is : "<<top<<endl;
			}
		}
		
		void change(int pos, int val)
		{
			if(isEmpty())
			{
				cout<<"Stack is empty"<<endl;
			}
			else
			{
				arr[pos] = val;
			}
		}
		
		void display()
		{
			cout<<"the value of top is : "<<top<<endl;
			for(int i=0;i<5;i++)
			{
				cout<<"the value at "<<i<<" is "<<arr[i]<<endl;
			}
			cout<<"Printed"<<endl;
		}
		
};

int main()
{
	Stack s1;
	s1.push(50);
	s1.push(40);
	s1.push(30);
	s1.push(20);
	s1.push(10);
	s1.display();
	s1.pop();
	s1.display();
	
	s1.count();
	s1.peek(2);
	/*s1.isFull();
	s1.isEmpty();
*/
	return 0;
}
